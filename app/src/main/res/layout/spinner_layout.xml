<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/map_select_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/stu_layout"
        android:padding="5dp">

        <TextView android:id="@+id/map_time_select"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_centerVertical="true"
                  android:text="@string/recent_one_day"
                  android:textColor="@color/contactTex"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="23dp"
            android:padding="5dp"
            android:layout_toEndOf="@+id/map_time_select"
            app:srcCompat="@drawable/down"/>

    </RelativeLayout>


</LinearLayout>