<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroundColor"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/contact_line">

        <LinearLayout
            android:id="@+id/mLayout"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:background="@drawable/contact_shape"
            android:padding="1dp"
            android:gravity="center">

            <TextView
                android:id="@+id/studentTex"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/contact_stu"
                android:background="@color/layoutBackground"
                android:textColor="@color/contact_line"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/layoutBackground"></View>

            <TextView
                android:id="@+id/teacherTex"
                android:gravity="center"
                android:text="@string/constact_tea"
                android:textColor="@color/layoutBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>